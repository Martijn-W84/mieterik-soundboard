---
import SoundBoard from '../components/SoundBoard.svelte';
import Layout from '../layouts/Layout.astro';
---

<Layout>
	<header><h1>Mieterikse Soundboard</h1></header>	
	<main>
		<SoundBoard client:load></SoundBoard>
	</main>
</Layout>

<style>
	main {
		display: flex;
		align-items: center;
		justify-content: center;	
		height: 100%;			
	}

	header {
		display: flex;
		align-items: center;
		justify-content: center;	
	}

	body {
		background-color: rgb(37, 165, 122);
		font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif;
	}
</style>
